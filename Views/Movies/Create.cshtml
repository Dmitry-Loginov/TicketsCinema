@model TicketsCinema.ViewModels.MovieCreateViewModel

@{
    ViewData["Title"] = "Создать фильм";
}

<div class="container mt-5">
    <h2 class="text-white">Создать новый фильм</h2>
    <form method="post" asp-action="Create">
        <div class="mb-2">
            <label class="form-label text-white" for="Title">Название фильма</label>
            <input type="text" class="form-control" id="Title" name="Title" required />
        </div>
        <div class="mb-3">
            <label class="form-label text-white" for="PreviewUrl">URL превью</label>
            <input type="url" class="form-control" id="PreviewUrl" name="PreviewUrl" />
        </div>
        <div class="mb-3">
            <label class="form-label text-white" for="ShortDesc">Краткое описание</label>
            <textarea class="form-control" id="ShortDesc" name="ShortDesc"></textarea>
        </div>
        <div class="mb-3">
            <label class="form-label text-white" for="DateTime">Дата и время</label>
            <input type="datetime-local" class="form-control" id="DateTime" name="DateTime" />
        </div>
        <div class="mb-3">
            <label class="form-label text-white" for="Price">Цена</label>
            <input type="number" step="0.01" class="form-control" id="Price" name="Price" required />
        </div>
        <button type="submit" class="btn btn-primary">Создать</button>
    </form>
</div>